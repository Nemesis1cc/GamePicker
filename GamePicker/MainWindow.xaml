<Window x:Class="GamePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamePicker"
        mc:Ignorable="d"
        Title="Game Picker" Height="445" Width="835" Icon="/Resources/ArrowRight.png">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="/Resources/Background.png"></ImageBrush>
        </StackPanel.Background>
        <Label Height="10"></Label>
        <Border BorderThickness="1" Width="780" BorderBrush="White">
            <TextBlock x:Name="Game1" Text="?" TextAlignment="Center" FontSize="40" FontStyle="Italic" Width="780" Foreground="Yellow">
                <TextBlock.Background>
                    <SolidColorBrush Color="Black" Opacity="0.65"></SolidColorBrush>
                </TextBlock.Background>
            </TextBlock>
        </Border>
        <Label Height="5"></Label>
        <Border BorderThickness="1" Width="780" BorderBrush="White">
            <TextBlock x:Name="Game2" Text="?" TextAlignment="Center" FontSize="40" FontStyle="Italic" Width="780" Foreground="Yellow">
                <TextBlock.Background>
                    <SolidColorBrush Color="Black" Opacity="0.65"></SolidColorBrush>
                </TextBlock.Background>
            </TextBlock>
        </Border>
        <Label Height="5"></Label>
        <DockPanel>
            <Image Source="/Resources/ArrowRight.png" Width="60" VerticalAlignment="Center" Margin="10, 0, 0, 0" DockPanel.Dock="Left"></Image>
            <Image Source="/Resources/ArrowLeft.png" Width="60" VerticalAlignment="Center" Margin="0, 0, 10, 0" DockPanel.Dock="Right"></Image>
            <Border BorderThickness="2" Width="670" BorderBrush="White">
                <TextBlock x:Name="Game3" Text="?" TextAlignment="Center" FontSize="40" FontStyle="Italic" Width="670" Foreground="Gold">
                    <TextBlock.Background>
                        <SolidColorBrush Color="Black" Opacity="0.75"></SolidColorBrush>
                    </TextBlock.Background>
                </TextBlock>
            </Border>
        </DockPanel>
        <Label Height="5"></Label>
        <Border BorderThickness="1" Width="780" BorderBrush="White">
            <TextBlock x:Name="Game4" Text="?" TextAlignment="Center" FontSize="40" FontStyle="Italic" Width="780" Foreground="Yellow">
                <TextBlock.Background>
                    <SolidColorBrush Color="Black" Opacity="0.65"></SolidColorBrush>
                </TextBlock.Background>
            </TextBlock>
        </Border>
        <Label Height="5"></Label>
        <Border BorderThickness="1" Width="780" BorderBrush="White">
            <TextBlock x:Name="Game5" Text="?" TextAlignment="Center" FontSize="40" FontStyle="Italic" Width="780" Foreground="Yellow">
                <TextBlock.Background>
                    <SolidColorBrush Color="Black" Opacity="0.65"></SolidColorBrush>
                </TextBlock.Background>
            </TextBlock>
        </Border>
        <Button x:Name="btn" Click="Button_Click" Content="Fill list" FontSize="40" Width="250" Margin="20" FontStyle="Italic" Background="LightGray">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Window>
